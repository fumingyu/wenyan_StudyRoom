/* pages/overview/overview.wxss */

.navbar{
  display: flex;
  background: rgb(255, 255, 255);
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.buttons {
  display: flex;
}

button {
  margin-top: 40rpx;
}

.record_num {
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: inline-flex;
}
.selected{
  margin-top: -6rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.record-title, .content-item{
  font-size: 30rpx;
  display: flex;
}
.title-item {
  margin-left: 20rpx;
}

.record {
  margin-top: 30rpx;
}
.record-title{
  margin-left: 28rpx;
  font-size: 30rpx;
}
#fee {
  margin-left: 50rpx;
}
.record-content{
  white-space:nowrap;
}
.content-item{
  margin-left: 20rpx;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  margin-right: 20rpx;
  border-bottom: 1px solid #bdbaba;
  /* 用justify-content 选择元素对齐方式 */
  justify-content: space-evenly;
}

.bottom {
  margin-top: 30rpx;
  text-align: center;
}

.renew-button, .info-button, .delete-button {
  width: 65rpx !important;
  height: 60rpx !important;
  margin-left: -10rpx !important;
  margin-top: -1rpx !important;
  text-align: center;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.4;
 }
 .modalDlg{
  width: 500rpx;
  height: 620rpx;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -320rpx 105rpx;
  background-color: rgba(249, 250, 236, 0.945);
  border-radius: 36rpx;
  position: fixed;
  display: flex;
  flex-direction: column;
 }
 .info-id{
  display: flex;
  margin-top: 30rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
}
.info-body{
  margin-top: 30rpx;
  margin-left: 50rpx;
  font-size: 30rpx;
}
.info-content{
  display: flex;
  margin-top: 26rpx;
}
.note-button{
  margin-top: -10rpx;
}
.certain-button{
  position: absolute;
  left: 35%;
}
.bt {
  margin-top: 70rpx;
  margin-left: 70rpx;
}