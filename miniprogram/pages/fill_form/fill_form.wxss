/* 当前座位号 */
.title {
  margin-top: 30rpx;
  padding-left: 30rpx;
  display: flex;
  background-color: blanchedalmond;
}
#table_title {
  margin-top: 20rpx;
}
#table_id {
  font-size: 60rpx;
}
/* 表单 */
.form-container {
  padding: 30rpx;
}
/* 每行样式 */
.form-item{
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  border-bottom: 1px solid #e8e8e8;
}
/* 左侧标题 */
.form-item-title {
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
}
/* 右侧输入框 */
.input-box{
  display: flex;
  margin-left: 50rpx;
}
.form-input, .time-select, #ternimal, .fee-select {
  align-items: center;
  font-size: 36rpx;
  color: rgb(125, 126, 126);
  vertical-align:middle;
}
/* 天或月 & 租用时长 */
.picker-duration, .day-or-month, .picker-arrived{
  margin-left: 50rpx;
}
#day_or_month {
  margin-left: 35rpx;
}
/* 费用 */
#fee {
  margin-left: 120rpx;
  height: 100rpx;
  align-items: center;
}
.rmb {
  position: relative;
  margin-left: -70rpx;
}
/* 到考研switch */
#kaoyan {
  margin-left: 80rpx;
}
/* 到考研的输入框样式 */
.kaoyan {
  background-color: rgb(216, 216, 216);
  width: 400rpx;
  margin-left: 45rpx;
}
#explain {
  padding-top: 10rpx;
}